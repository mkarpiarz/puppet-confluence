<?xml version="1.0" encoding="UTF-8"?>

<confluence-configuration>
  <setupStep><%= scope.lookupvar('confluence::setupstep') %></setupStep>
  <setupType>custom</setupType>
  <buildNumber><%= scope.lookupvar('confluence::buildnumber') %></buildNumber>
  <properties>
    <property name="admin.ui.allow.daily.backup.custom.location">false</property>
    <property name="admin.ui.allow.manual.backup.download">false</property>
    <property name="admin.ui.allow.site.support.email">false</property>
    <property name="atlassian.license.message"><%= scope.lookupvar('confluence::licensemessage') %></property>
    <property name="attachments.dir">${confluenceHome}/attachments</property>
    <property name="confluence.setup.server.id"><%= scope.lookupvar('confluence::serverid') %></property>
    <property name="confluence.webapp.context.path"></property>
    <property name="hibernate.c3p0.acquire_increment">1</property>
    <property name="hibernate.c3p0.idle_test_period">100</property>
    <property name="hibernate.c3p0.max_size">30</property>
    <property name="hibernate.c3p0.max_statements">0</property>
    <property name="hibernate.c3p0.min_size">0</property>
    <property name="hibernate.c3p0.timeout">30</property>
    <property name="hibernate.connection.driver_class"><%= scope.lookupvar('confluence::dbdriver') %></property>
    <property name="hibernate.connection.isolation">2</property>
    <property name="hibernate.connection.password"><%= scope.lookupvar('confluence::dbpassword') %></property>
    <property name="hibernate.connection.url">jdbc:<%= scope.lookupvar('confluence::dbprotocol') %>://<%= scope.lookupvar('confluence::dbhost') %>:<%= scope.lookupvar('confluence::dbport') %>/<%= scope.lookupvar('confluence::dbname') %></property>
    <property name="hibernate.connection.username"><%= scope.lookupvar('confluence::dbuser') %></property>
    <property name="hibernate.database.lower_non_ascii_supported">true</property>
    <property name="hibernate.dialect"><%= scope.lookupvar('confluence::dbdialect') %></property>
    <property name="hibernate.setup">true</property>
    <property name="lucene.index.dir">${localHome}/index</property>
    <property name="webwork.multipart.saveDir">${localHome}/temp</property>
  </properties>
</confluence-configuration>
